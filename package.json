{
  "name": "compasso",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "description": "Finance tracker",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "npm run dev -w @compasso/api",
    "dev:web": "npm run dev -w @compasso/web",
    "build": "npm run build -w @compasso/shared && npm run build -w @compasso/api && npm run build -w @compasso/web",
    "build:api": "npm run build -w @compasso/api",
    "build:web": "npm run build -w @compasso/web",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "docker:up": "docker compose up --build -d"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
